<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_18"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_liverv"
            android:layout_width="@dimen/dp_185"
            android:layout_height="@dimen/dp_185"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/play_circle_o"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_liverv"
            app:layout_constraintLeft_toLeftOf="@id/iv_item_liverv"
            app:layout_constraintRight_toRightOf="@id/iv_item_liverv"
            app:layout_constraintTop_toTopOf="@id/iv_item_liverv" />

        <TextView
            android:id="@+id/tv_item_liverv"
            android:layout_width="@dimen/dp_185"
            android:layout_height="wrap_content"
            android:text="一条小团团正在直播"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="@id/iv_item_liverv"
            app:layout_constraintTop_toBottomOf="@id/iv_item_liverv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>