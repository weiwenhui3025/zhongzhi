<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ticketing.activity.ReserveActivity">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/ll"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_back"
            android:src="@mipmap/icon_back"
            />
        <TextView
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="订票"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/topVp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:layout_marginTop="10dp"
        android:background="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_count"
        app:layout_constraintTop_toTopOf="@id/topVp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        android:background="@drawable/reserve_ivcount"
        android:text="1/5"
        android:layout_marginTop="120dp"
        android:textSize="22sp"
        android:layout_marginRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/topVp"
        android:layout_width="match_parent"
        android:background="@drawable/layout_reserve"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="少年的你-朝阳剧场"
            android:textColor="#000000"
            android:textSize="22sp"
            />
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab"
            android:layout_marginTop="5dp"
            app:tabTextColor="@color/colorNo"
            app:tabSelectedTextColor="@color/colorYes"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F5F5F5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="荧屏"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/vp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F5F5F5"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_location"
                android:text="4-3、4-4"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即购票"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/reserve_gou"
                android:id="@+id/tv_ticket"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>