<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerHorizontal="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_shadow_end_color"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.activity.ArticledetailsActivity">



    <TextView
        android:background="@color/cardview_light_background"
        android:textSize="18sp"
        android:text="文章"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/image_head"
        android:layout_width="wrap_content"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_baseline_share_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_star_border_24"
        android:layout_width="27dp"
        android:layout_height="27dp"/>



    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/image_head"
        android:textColor="@color/design_default_color_on_secondary"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="阿斯弗哈岁的返回啊师傅i发生的"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_below="@+id/tv_title"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="2020.06.09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/tv_time"
        android:id="@+id/tv_name"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="哈哈哈圣诞节哈桑积分兑换把手机号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_sad"
        android:layout_below="@+id/tv_name"
        android:text="          哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈吼吼吼吼吼吼吼吼吼吼吼吼吼吼吼哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_below="@+id/tv_sad"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>