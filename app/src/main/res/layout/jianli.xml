<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/dp_20"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/header_jianjie"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="16dp"
        android:background="@drawable/jianli"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gaunzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        android:text="我的关注：9"
        app:layout_constraintLeft_toRightOf="@+id/header_jianjie"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:text="我的粉丝：12"
        app:layout_constraintLeft_toRightOf="@+id/header_jianjie"
        app:layout_constraintTop_toTopOf="@+id/gaunzhu" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="36dp"
        android:background="@drawable/shape_zhibo_tvbg"
        android:text="开启直播"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>