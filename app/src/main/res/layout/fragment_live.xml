<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.live.LiveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Live_ConstraintLayout_i"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/tz"
                android:background="#ffffff"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="30dp"
                android:layout_height="40dp"/>
            <ViewFlipper
                android:id="@+id/Live_ViewFlipper_i"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:paddingRight="50dp"
                android:autoStart="true"
                android:background="#ffffff"
                android:flipInterval="3000"
                android:inAnimation="@anim/slide_in_bottom"
                android:outAnimation="@anim/slide_out_top"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/tv_warning_content1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="“一条小团团”正在直播..... 快去观看吧！！！"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_warning_content2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="从此再无五道口，世上再无段宏楠"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </ViewFlipper>
            <ImageView
                android:layout_marginTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="详情"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/zhankai"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="17dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Live_ConstraintLayout_ii"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/tz"
                android:background="#ffffff"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="30dp"
                android:layout_height="40dp"/>
            <ViewFlipper
                android:id="@+id/Live_ViewFlipper_ii"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:paddingRight="50dp"
                android:autoStart="true"
                android:background="#ffffff"
                android:flipInterval="3000"
                android:inAnimation="@anim/slide_in_bottom"
                android:outAnimation="@anim/slide_out_top"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/Live_TextView_content_i"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="“一条小团团”正在直播..... 快去观看吧！！！"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/Live_TextView_content_ii"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="从此再无五道口，世上再无段宏楠"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </ViewFlipper>
            <ImageView
                android:layout_marginTop="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="详情"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/zhankai"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="17dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/header_jianjie"
               android:layout_width="@dimen/dp_70"
               android:layout_height="@dimen/dp_70"
               android:layout_marginLeft="16dp"
               android:background="@drawable/jianli"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/gaunzhu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dp"
               android:layout_marginTop="22dp"
               android:text="我的关注：9"
               app:layout_constraintLeft_toRightOf="@+id/header_jianjie"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/fensi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dp"
               android:layout_marginTop="40dp"
               android:text="我的粉丝：12"
               app:layout_constraintLeft_toRightOf="@+id/header_jianjie"
               app:layout_constraintTop_toTopOf="@+id/gaunzhu" />

           <Button
               android:id="@+id/btn_start"
               android:layout_width="120dp"
               android:layout_height="30dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginRight="36dp"
               android:background="@drawable/shape_zhibo_tvbg"
               android:text="开启直播"
               android:textColor="#ffffff"
               android:textSize="15sp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent" />
       </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>